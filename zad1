import java.util.Scanner;
public class zad1 {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		
		System.out.println("Zadanie 1\nIle ocen chcesz podać??");
		int ilosc = scan.nextInt();
		float suma = 0;
		
		for(int i = 0; i < ilosc; i++) {
			
			System.out.println("Podaj wartość");
			suma = suma + scan.nextFloat();
			
		}
		double srednia = suma / ilosc;
		
		System.out.println("Średnia z podanych ocen to " + srednia);
		
	}

}
